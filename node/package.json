{
  "name": "red-tetris",
  "version": "1.0.0",
  "description": "multiplayer tretris game in browser",
  "scripts": {
    "eslint": "eslint src",
    "client-dist": "NODE_ENV=production webpack --progress --colors",
    "client-dev": "webpack-dev-server --colors --hot --inline --host 0.0.0.0 --port 8080",
    "srv-dev": "DEBUG=tetris:* babel-watch -w src src/server/main.js",
    "all-dev": "webpack-dev-server --colors --hot --inline --host 0.0.0.0 --port 8080 & DEBUG=tetris:* babel-watch -w src src/server/main.js",
    "srv-dist": "DEBUG=tetris:* babel src --out-dir dist",
    "test": "mocha --require babel-core/register --reporter spec",
    "coverage": "NODE_ENV=test nyc --include src --all -r text -r lcov -r text --require babel-core/register mocha ",
    "update:packages": "node wipe-dependencies.js && npm update --save-dev && npm update --save"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "socket.io": "^3.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-__coverage__": "^1.11.111",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-watch": "^7.3.0",
    "eslint": "^7.17.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-react": "^7.22.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "webpack": "^5.14.0",
    "webpack-dev-middleware": "^4.0.4",
    "webpack-dev-server": "^3.11.2",
    "webpack-hot-middleware": "^2.25.0"
  },
  "nyc": {
    "exclude": [
      "build"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flavienfr/red-tetris.git"
  },
  "keywords": [
    "tetris"
  ],
  "author": "froussel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/flavienfr/red-tetris/issues"
  },
  "homepage": "https://github.com/flavienfr/red-tetris#readme"
}
